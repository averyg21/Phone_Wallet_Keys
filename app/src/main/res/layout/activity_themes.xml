<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.averygrimes.phone_wallet_keys.Themes"
    android:orientation="vertical"
    android:layout_margin="20dp">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="B|G"
        android:layout_gravity="center_horizontal"
        android:layout_margin="5dp"
        android:id="@+id/btn_UHCL" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="91dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_UHCL"
        android:layout_gravity="center_horizontal"
        android:text="UHCL Theme"
        android:layout_marginBottom="20dp"/>

    <Button
        android:id="@+id/btn_Dark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="5dp"
        android:layout_marginTop="20dp"
        android:text="R|B" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="91dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_Dark"
        android:layout_gravity="center_horizontal"
        android:text="Dark Theme"
        android:layout_marginBottom="20dp"/>

    <Button
        android:id="@+id/btn_Beach"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="5dp"
        android:text="B|T" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="91dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_Beach"
        android:layout_gravity="center_horizontal"
        android:text="Beach Theme"
        android:layout_marginBottom="20dp"/>

    <Button
        android:id="@+id/btn_Fall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="5dp"
        android:text="P|B" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="91dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_Fall"
        android:layout_gravity="center_horizontal"
        android:text="Purple Theme" />


</LinearLayout>
